{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      {
        "include": "../storage/**/*",
        "watchAssets": true,
        "outDir": "dist/storage"
      },
      {
        "include": "../emailPages/**/*",
        "watchAssets": true,
        "outDir": "dist/emailPages"
      }
    ]
  }
}
